<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:title="@string/crdroid_custom_title"
    xmlns:settings="http://schemas.android.com/apk/res/com.android.settings">

    <!-- Status bar settings -->
    <PreferenceScreen
        android:key="status_bar"
        android:fragment="com.android.settings.crdroid.StatusBarSettings"
        android:title="@string/status_bar_title"/>

    <!-- Heads up notifications -->
    <Preference
        android:key="heads_up_enabled"
        android:fragment="com.android.settings.crdroid.HeadsUpSettings"
        android:title="@string/category_heads_up" />

    <!-- Recent panel settings --> 
    <PreferenceScreen
        android:key="recents_panel"
        android:fragment="com.android.settings.crdroid.RecentsPanelSettings"
        android:title="@string/recents_panel_title"/>

    <!-- crDroid lockscreen -->
    <PreferenceScreen
        android:key="lockscreen_crdroid"
        android:fragment="com.android.settings.crdroid.LockScreenSettings"
        android:title="@string/crdroid_lockscreen_title" />

    <!-- Advanced options -->
    <PreferenceScreen
        android:key="sound_settings"
        android:fragment="com.android.settings.crdroid.SoundSettings"
        android:title="@string/sound_title" />

    <!-- Display -->
    <PreferenceScreen
        android:key="display_settings"
        android:fragment="com.android.settings.crdroid.DisplaySettings"
        android:title="@string/display_settings_title" />

    <!-- Circle app bar -->
    <PreferenceScreen
        android:key="app_circle_bar"
        android:fragment="com.android.settings.crdroid.AppCircleBar"
        android:title="@string/app_circle_bar_title"/>

    <!-- Gesture anywhere -->
    <PreferenceScreen
        android:key="gesture_anywhere"
        android:fragment="com.android.settings.crdroid.gestureanywhere.GestureAnywhereSettings"
        android:title="@string/gesture_anywhere_title" />

    <!-- Animation settings -->
    <PreferenceScreen
        android:key="animation"
        android:fragment="com.android.settings.crdroid.AnimationSettings"
        android:title="@string/animation_settings_title"/>

    <!-- Ad Blocker -->
    <PreferenceScreen
        android:key="hfm_settings"
        android:title="@string/hfm_pref_screen_title"
        android:fragment="com.android.settings.crdroid.hfm.HfmSettings" />

    <!-- Screen Recorder -->
    <PreferenceScreen
        android:key="screen_recorder"
        android:title="@string/screen_recorder_title"
        android:fragment="com.android.settings.crdroid.ScreenRecorderSettings" />

    <!-- Wakelock blocker -->
    <PreferenceScreen
        android:key="wakelock_blocker"
        android:fragment="com.android.settings.crdroid.WakeLockBlocker"
        android:title="@string/wakelock_blocker_title" />

</PreferenceScreen>
